<h1>Registre seu estabelecimento</h1>

<%= form_with(model: @establishment) do |establishiment_form| %>
    <%= establishiment_form.label :trade_name %>
    <%= establishiment_form.text_field :trade_name %>

    <%= establishiment_form.label :legal_name %>
    <%= establishiment_form.text_field :legal_name %>

    <%= establishiment_form.label :business_national_id %>
    <%= establishiment_form.text_field :business_national_id %>

    <%= establishiment_form.label :email %>
    <%= establishiment_form.text_field :email %>

    <%= establishiment_form.label :phone %>
    <%= establishiment_form.text_field :phone %>
    
    <%= establishiment_form.fields_for :address do |address_form| %>
      <%= address_form.label :street_name %>
      <%= address_form.text_field :street_name %>

      <%= address_form.label :street_number %>
      <%= address_form.text_field :street_number %>

      <%= address_form.label :neighborhood %>
      <%= address_form.text_field :neighborhood %>

      <%= address_form.label :city %>
      <%= address_form.text_field :city %>

      <%= address_form.label :state %>
      <%= address_form.text_field :state %>

      <%= address_form.label :country %>
      <%= address_form.text_field :country %>
    <% end %>

  <%= establishiment_form.submit %>
<% end %>

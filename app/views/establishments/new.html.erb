<h1>REGISTRO DE ESTABELECIMENTO</h1>

<%= form_with(model: @establishment) do |f| %>
    <%= f.label :trade_name %>
    <%= f.text_field :trade_name %>

    <%= f.label :legal_name %>
    <%= f.text_field :legal_name %>

    <%= f.label :business_national_id %>
    <%= f.text_field :business_national_id %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :phone %>
    <%= f.text_field :phone %>
    
    <%= f.fields_for :address do |address_form| %>
      <%= address_form.label :street_name %>
      <%= address_form.text_field :street_name %>

      <%= address_form.label :street_number %>
      <%= address_form.text_field :street_number %>

      <%= address_form.label :neighborhood %>
      <%= address_form.text_field :neighborhood %>

      <%= address_form.label :city %>
      <%= address_form.text_field :city %>

      <%= address_form.label :state %>
      <%= address_form.text_field :state %>

      <%= address_form.label :country %>
      <%= address_form.text_field :country %>
    <% end %>

  <%= f.submit %>
<% end %>
